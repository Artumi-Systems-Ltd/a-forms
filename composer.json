{
    "name": "artumi-systems-ltd/a-forms",
    "description": "Form builder for laravel",
    "version": "1.0.0",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Richard Fletcher",
            "email": "richard@artumi.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Artumi\\Forms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "require": {
        "php": "^8.2",
        "laravel/framework": ">=10.0",
        "artumi-systems-ltd/page-asset-manager": "dev-main"
    },
	"repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/Artumi-Systems-Ltd/page-asset-manager"
        }
	],
    "require-dev": {
        "orchestra/testbench": "^8.20",
        "phpunit/phpunit": "^10.5",
        "ext-sqlite3": "*",
        "ext-pcov": "*"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always  --bootstrap=vendor/autoload.php tests",
        "test-feature": "vendor/bin/phpunit  --colors=always  --bootstrap=vendor/autoload.php tests/Feature",
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ]
    }
}
